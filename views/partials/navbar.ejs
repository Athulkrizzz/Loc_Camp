<style>
    .navbar-custom {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        padding: 1rem 0;
        transition: all 0.3s ease;
    }

    .navbar-custom.scrolled {
        padding: 0.5rem 0;
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.2);
    }

    .navbar-brand {
        font-family: 'Montserrat', sans-serif;
        font-weight: 700;
        font-size: 1.6rem;
        color: white !important;
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
        letter-spacing: 0.5px;
    }

    .navbar-brand i {
        margin-right: 0.5rem;
        font-size: 1.8rem;
        color: #ff6b6b;
        animation: tentBounce 2s ease-in-out infinite;
    }

    @keyframes tentBounce {
        0%, 100% { transform: rotate(0deg); }
        25% { transform: rotate(-5deg); }
        75% { transform: rotate(5deg); }
    }

    .navbar-brand:hover {
        transform: scale(1.05);
        color: #ff6b6b !important;
    }

    .navbar-nav .nav-link {
        color: rgba(255, 255, 255, 0.9) !important;
        font-weight: 500;
        padding: 0.5rem 1rem !important;
        margin: 0 0.2rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .navbar-nav .nav-link::before {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 2px;
        background: #4ecdc4;
        transition: all 0.3s ease;
        transform: translateX(-50%);
    }

    .navbar-nav .nav-link:hover {
        color: white !important;
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-2px);
    }

    .navbar-nav .nav-link:hover::before {
        width: 80%;
    }

    .navbar-nav .nav-link.active {
        color: white !important;
        background: rgba(78, 205, 196, 0.2);
        font-weight: 600;
    }

    .navbar-nav .nav-link.active::before {
        width: 80%;
    }

    .navbar-nav .nav-link i {
        margin-right: 0.4rem;
        font-size: 1.1rem;
    }

    /* Auth buttons styling */
    .navbar-nav.ms-auto .nav-link {
        border: 2px solid transparent;
    }

    .navbar-nav.ms-auto .nav-link:hover {
        border-color: rgba(255, 255, 255, 0.3);
    }

    .btn-login {
        background: transparent;
        border: 2px solid rgba(78, 205, 196, 0.7);
        color: #4ecdc4 !important;
        padding: 0.4rem 1.2rem !important;
        border-radius: 8px;
        margin: 0 0.3rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-login:hover {
        background: #4ecdc4;
        color: #1a1a2e !important;
        border-color: #4ecdc4;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(78, 205, 196, 0.4);
    }

    .btn-signup {
        background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
        border: 2px solid transparent;
        color: white !important;
        padding: 0.4rem 1.2rem !important;
        border-radius: 8px;
        margin: 0 0.3rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-signup:hover {
        background: linear-gradient(135deg, #ff8e53 0%, #ff6b6b 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(255, 107, 107, 0.4);
    }

    .btn-logout {
        background: rgba(255, 107, 107, 0.2);
        border: 2px solid rgba(255, 107, 107, 0.7);
        color: #ff6b6b !important;
        padding: 0.4rem 1.2rem !important;
        border-radius: 8px;
        margin: 0 0.3rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-logout:hover {
        background: #ff6b6b;
        border-color: #ff6b6b;
        color: white !important;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(255, 107, 107, 0.4);
    }

    .navbar-toggler {
        border: 2px solid rgba(255, 255, 255, 0.5);
        padding: 0.5rem 0.75rem;
        transition: all 0.3s ease;
    }

    .navbar-toggler:hover {
        border-color: white;
        background: rgba(255, 255, 255, 0.1);
    }

    .navbar-toggler:focus {
        box-shadow: 0 0 0 0.25rem rgba(78, 205, 196, 0.25);
    }

    .navbar-toggler-icon {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(255, 255, 255, 1)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
    }

    @media (max-width: 991px) {
        .navbar-nav {
            padding: 1rem 0;
        }

        .navbar-nav .nav-link {
            margin: 0.3rem 0;
        }

        .navbar-nav.ms-auto {
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
        }

        .btn-login,
        .btn-signup,
        .btn-logout {
            display: block;
            text-align: center;
            margin: 0.5rem 0;
        }
    }
</style>

<nav class="navbar sticky-top navbar-expand-lg navbar-custom mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" href="/campground">
            <i class="fas fa-campground"></i>
            TripCamp
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link active" aria-current="page" href="/campground/camp">
                    <i class="fas fa-map-marked-alt"></i>
                    Campgrounds
                </a>
                <a class="nav-link" href="/campground/new">
                    <i class="fas fa-plus-circle"></i>
                    Add New
                </a>
            </div>
            <div class="navbar-nav ms-auto">
                <% if(!currentuser) { %>
                    <a class="nav-link btn-login" href="/login">
                        <i class="fas fa-sign-in-alt"></i>
                        Login
                    </a>
                    <a class="nav-link btn-signup" href="/register">
                        <i class="fas fa-user-plus"></i>
                        Sign Up
                    </a> 
                <% } else { %>
                    <a class="nav-link btn-logout" href="/logout">
                        <i class="fas fa-sign-out-alt"></i>
                        Logout
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</nav>

<script>
    // Add scroll effect to navbar
    window.addEventListener('scroll', function() {
        const navbar = document.querySelector('.navbar-custom');
        if (window.scrollY > 50) {
            navbar.classList.add('scrolled');
        } else {
            navbar.classList.remove('scrolled');
        }
    });

    // Set active link based on current page
    document.addEventListener('DOMContentLoaded', function() {
        const currentLocation = window.location.pathname;
        const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
        
        navLinks.forEach(link => {
            if (link.getAttribute('href') === currentLocation) {
                navLinks.forEach(l => l.classList.remove('active'));
                link.classList.add('active');
            }
        });
    });
</script>