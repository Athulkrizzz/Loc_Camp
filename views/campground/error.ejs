<% layout('layouts/boilerplate') %>

<style>
    .error-page {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 3rem 0;
    }

    .error-container {
        max-width: 700px;
        width: 100%;
        margin: 0 auto;
    }

    .error-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        animation: slideDown 0.5s ease-out;
    }

    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .error-header {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        padding: 2.5rem;
        text-align: center;
        position: relative;
    }

    .error-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120"><path d="M0,0 Q300,50 600,0 T1200,0 L1200,120 L0,120 Z" fill="rgba(255,255,255,0.05)"/></svg>');
        background-size: cover;
        opacity: 0.3;
    }

    .error-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
        animation: shake 0.5s ease-in-out;
        display: inline-block;
        position: relative;
        z-index: 1;
    }

    @keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-10px) rotate(-5deg); }
        75% { transform: translateX(10px) rotate(5deg); }
    }

    .error-header h1 {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.8rem;
        font-weight: 700;
        margin: 0;
        position: relative;
        z-index: 1;
    }

    .error-body {
        padding: 2.5rem;
    }

    .error-message {
        background: #f8d7da;
        border-left: 4px solid #dc3545;
        padding: 1.5rem;
        border-radius: 10px;
        margin-bottom: 1.5rem;
    }

    .error-message h4 {
        color: #721c24;
        font-weight: 700;
        font-size: 1.3rem;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
    }

    .error-message h4 i {
        margin-right: 0.5rem;
        font-size: 1.5rem;
    }

    .error-message p {
        color: #721c24;
        margin: 0;
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .error-stack {
        background: #1a1a2e;
        color: #4ecdc4;
        padding: 1.5rem;
        border-radius: 10px;
        font-family: 'Courier New', monospace;
        font-size: 0.85rem;
        line-height: 1.6;
        overflow-x: auto;
        max-height: 300px;
        overflow-y: auto;
        margin-bottom: 1.5rem;
        border: 2px solid #e0e0e0;
    }

    .error-stack::-webkit-scrollbar {
        width: 8px;
        height: 8px;
    }

    .error-stack::-webkit-scrollbar-track {
        background: #16213e;
    }

    .error-stack::-webkit-scrollbar-thumb {
        background: #4ecdc4;
        border-radius: 4px;
    }

    .error-stack pre {
        margin: 0;
        color: #4ecdc4;
        white-space: pre-wrap;
        word-wrap: break-word;
    }

    .stack-label {
        color: #ff6b6b;
        font-weight: 700;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
    }

    .stack-label i {
        margin-right: 0.5rem;
    }

    .error-actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 2rem;
    }

    .btn-home {
        background: linear-gradient(135deg, #4ecdc4 0%, #45b7aa 100%);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

    .btn-home:hover {
        background: linear-gradient(135deg, #45b7aa 0%, #3da89d 100%);
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(78, 205, 196, 0.3);
        color: white;
    }

    .btn-back {
        background: transparent;
        color: #6c757d;
        border: 2px solid #6c757d;
        padding: 0.65rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

    .btn-back:hover {
        background: #6c757d;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(108, 117, 125, 0.3);
    }

    .help-text {
        text-align: center;
        color: #6c757d;
        font-size: 0.9rem;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e0e0e0;
    }

    .help-text i {
        color: #4ecdc4;
        margin-right: 0.3rem;
    }

    @media (max-width: 768px) {
        .error-page {
            padding: 2rem 1rem;
        }

        .error-header {
            padding: 2rem 1.5rem;
        }

        .error-icon {
            font-size: 3rem;
        }

        .error-header h1 {
            font-size: 1.5rem;
        }

        .error-body {
            padding: 1.5rem;
        }

        .error-message h4 {
            font-size: 1.1rem;
        }

        .error-stack {
            font-size: 0.8rem;
            padding: 1rem;
        }

        .error-actions {
            flex-direction: column;
        }

        .btn-home,
        .btn-back {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="error-page">
    <div class="error-container">
        <div class="error-card">
            <div class="error-header">
                <div class="error-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <h1>Oops! Something Went Wrong</h1>
            </div>
            
            <div class="error-body">
                <div class="error-message">
                    <h4>
                        <i class="fas fa-times-circle"></i>
                        <%= err.message %>
                    </h4>
                </div>

              
                <div class="error-actions">
                    <a href="/campground/camp" class="btn-home">
                        <i class="fas fa-home"></i>
                        Go to Campgrounds
                    </a>
                    <a href="javascript:history.back()" class="btn-back">
                        <i class="fas fa-arrow-left"></i>
                        Go Back
                    </a>
                </div>

                <div class="help-text">
                    <i class="fas fa-life-ring"></i>
                    If this problem persists, please contact support
                </div>
            </div>
        </div>
    </div>
</div>
