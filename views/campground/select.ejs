<script>
  const totalSlides = <%= camp.images.length %>;
  const carouselElement = document.getElementById('campgroundCarouselIndicators');
  const counterElement = document.getElementById('carouselCounter');

  carouselElement.addEventListener('slid.bs.carousel', function (event) {
    const currentSlide = event.to + 1; // Bootstrap uses zero-based indexing
    counterElement.textContent = `${currentSlide} / ${totalSlides}`;
  });
</script>

