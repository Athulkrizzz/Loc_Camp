<% layout ('layouts/boilerplate')%>

<div id="map" style="width: 100%; height: 500px;"></div>
    <h1>All Campgrounds</h1>
    <!-- <div>
        <a href="/campground/new">Add New Campground</a>
    </div> -->
          <% let count=0 %>
        
    <% for(let camp of campgrounds){ %>
    
        <% count++ %>
            <div class="col-10 offset-1">
                               <div class="card mb-3">
            <div class="row">

                <div class="col-3">
                    <img class="img-fluid " src="<%=camp.images[0].url %>" alt=" ">


                </div>
                <div class="col-6 ">
                    <div class="card-body">
                        <h5 class="card-title"><%= camp.name %></h5>
                        <p class="card-text"><%= camp.description %></p>
                        <h6 class="text-muted"><%= camp.location %></h6>
                        <a href="/campground/<%=camp._id %>" class="btn btn-primary"><%=camp.name%></a>
                    </div>
                </div>
            
            </div>


        </div>

        </div>


    
    <% } %>
    <div class="row">
        <div class="col-10 offset-1">
            
                <h2 class="text-primary"> <%= count %> Campgrounds</h2>
        </div>
    </div>
   
<script src="/javascript/main"></script>
