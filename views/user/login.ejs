<% layout('layouts/boilerplate') %>

    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <i class="fas fa-campground camp-icons camp-icon-1"></i>
                <i class="fas fa-tree camp-icons camp-icon-2"></i>
                <i class="fas fa-fire camp-icons camp-icon-3"></i>
                <i class="fas fa-mountain camp-icons camp-icon-4"></i>
                
                <div class="logo-icon">
                    <i class="fas fa-campground"></i>
                </div>
                <h1>TripCamp</h1>
                <p>Discover Amazing Campstays Across India</p>
            </div>
            
            <div class="login-body">
                <form action="/login" method="POST" novalidate class="validation">
                    <div class="mb-3">
                        <label class="form-label" for="username">Username</label>
                        <div class="input-group-custom">
                            <i class="fas fa-user input-icon"></i>
                            <input 
                                class="form-control" 
                                type="text" 
                                name="username" 
                                placeholder="Enter your username" 
                                id="username" 
                                required>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label class="form-label" for="password">Password</label>
                        <div class="input-group-custom">
                            <i class="fas fa-lock input-icon"></i>
                            <input 
                                class="form-control" 
                                type="password" 
                                name="password" 
                                placeholder="Enter your password" 
                                id="password" 
                                required>
                        </div>
                    </div>
                    
                    <button class="btn-submit" type="submit">
                        <i class="fas fa-sign-in-alt me-2"></i>Sign In
                    </button>
                </form>
                
                <div class="divider">
                    <span>OR</span>
                </div>
                
                <div class="signup-link">
                    Don't have an account? <a href="/register">Sign Up</a>
                </div>
            </div>
        </div>
    </div>
