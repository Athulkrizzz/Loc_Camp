<% layout('layouts/boilerplate') %>


        <div class="row">
        <h1 class="text-center text-primary">Sign-in</h1>
        <div class="col-4 offset-4">
            <form action="/login" method="POST" novalidate class="validation">
        
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="username" name="username" placeholder="username" id="username" unique required>
                       <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" name="password" placeholder="password" id="password" required>
                       <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-3 offset-4">
              
                    <button class="btn btn-success mb-3" type="submit">Submit</button>
                </div>
               
</form>
            </div>
        </div>